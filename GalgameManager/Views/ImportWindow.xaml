<?xml version="1.0" encoding="utf-8"?>
<winUiEx:WindowEx
    x:Class="GalgameManager.Views.ImportWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GalgameManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winUiEx="using:WinUIEx"
    mc:Ignorable="d"  
    Height="200" Width="500">

    <Grid RowDefinitions="*, Auto"
          Margin="20 20 20 20">
        <TextBlock Grid.Row="0" x:Name="TitleTextBlock"
                   Text="导入数据中，请稍等" Style="{StaticResource TitleTextBlockStyle}"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <TextBlock Grid.Row="1" x:Name="StatusTextBlock"
                   Margin="{StaticResource MediumTopMargin}"
                   Style="{StaticResource DescriptionTextStyle}"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>
    </Grid>
    
    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>
</winUiEx:WindowEx>
