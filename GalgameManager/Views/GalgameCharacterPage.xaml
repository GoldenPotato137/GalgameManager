<Page
    x:Class="GalgameManager.Views.GalgameCharacterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:GalgameManager.Helpers.Converter" 
    xmlns:models="using:GalgameManager.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:EnumToStringConverter x:Key="EnumToStringConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:DateTimeToDateTimeOffsetConverter x:Key="DateTimeToDateTimeOffsetConverter"/>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <!--641 is the default CompactModeThresholdWidth in NavigationView -->
                        <AdaptiveTrigger MinWindowWidth="641" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="CharacterInfoBlockLeft.(RelativePanel.RightOf)" Value="ImageBlock" />
                        <Setter Target="CharacterInfoBlockLeft.(RelativePanel.Below)" Value="TitlePanel" />
                        <Setter Target="CharacterInfoBlockLeft.Width" Value="180" />
                        <Setter Target="CharacterInfoBlockRight.(RelativePanel.RightOf)" Value="CharacterInfoBlockLeft" />
                        <Setter Target="CharacterInfoBlockRight.(RelativePanel.Below)" Value="TitlePanel" />
                        <Setter Target="CharacterInfoBlockRight.Width" Value="180" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <CommandBar Grid.Row="0" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                <!-- 编辑 -->
                <AppBarButton Icon="Edit" x:Uid="GalgamePage_Edit" 
                              Command="{x:Bind ViewModel.EditCommand}"
                              AllowFocusOnInteraction="True"
                              Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                <!-- 保存 -->
                <AppBarButton Icon="Save" x:Uid="GalgamePage_Save" 
                              Command="{x:Bind ViewModel.SaveCommand}"
                              AllowFocusOnInteraction="True"
                              Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                <!-- <AppBarButton x:Uid="GalgamePage_OpenInBgm" Command="{x:Bind ViewModel.OpenInBgmCommand}" 
                              Visibility="{x:Bind ViewModel.CanOpenInBgm, 
                                  Mode=OneWay}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8AD;" />
                    </AppBarButton.Icon>
                </AppBarButton> -->
                <!-- <AppBarButton x:Uid="GalgamePage_OpenInVndb" Command="{x:Bind ViewModel.OpenInVndbCommand}" 
                              Visibility="{x:Bind ViewModel.CanOpenInVndb, 
                                  Mode=OneWay}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8AD;" />
                    </AppBarButton.Icon>
                </AppBarButton> -->       
            </CommandBar>

            <ScrollViewer Grid.Row="1" IsTabStop="True">
                <StackPanel>
                    <RelativePanel x:Name="InfoPanel">
                        <Grid
                            x:Name="ImageBlock"
                            Height="250"
                            Margin="{StaticResource SmallRightMargin}"
                            Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            RelativePanel.AlignTopWithPanel="True"
                            RelativePanel.AlignLeftWithPanel="True">
                            <Image
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                MaxWidth="250"
                                MaxHeight="250"
                                Source="{x:Bind ViewModel.Character.ImagePath, Mode=OneWay, FallbackValue={}}" 
                                x:Name="DetailImage"/>
                        </Grid>

                        <!-- 姓名 -->
                        <StackPanel
                            x:Name="TitlePanel"
                            RelativePanel.AlignTopWithPanel="True"
                            RelativePanel.RightOf="ImageBlock">
                            <TextBlock
                                x:Name="TitleBlock"
                                Margin="{StaticResource XXSmallTopMargin}"
                                Style="{ThemeResource TitleTextBlockStyle}"
                                Text="{x:Bind ViewModel.Character.Name, Mode=OneWay, FallbackValue={}}"
                                IsTextSelectionEnabled="True"
                                Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                            <TextBox
                                x:Name="TitleEdit"
                                Margin="{StaticResource XXSmallTopMargin}"
                                Text="{x:Bind ViewModel.Character.Name, Mode=TwoWay, FallbackValue={}}"
                                Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </StackPanel>

                        <StackPanel x:Name="CharacterInfoBlockLeft" RelativePanel.Below="ImageBlock">
                            <!-- 生日 -->
                            <StackPanel Margin="{StaticResource SmallTopMargin}">
                                <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           x:Uid="GalgameCharacterPage_BirthDate" />
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                                           Text="{x:Bind ViewModel.Character.BirthDate, 
                                           Mode=OneWay, FallbackValue={}, TargetNullValue='-'}"
                                           Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <CalendarDatePicker 
                                    Date="{x:Bind ViewModel.SelectedDate, Mode=TwoWay}"
                                    Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                    FirstDayOfWeek="Monday"
                                    IsTodayHighlighted="False"
                                    Language="zh-CN" />
                            </StackPanel>

                            <!-- 关系 -->
                            <StackPanel Margin="{StaticResource SmallTopMargin}">
                                <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           x:Uid="GalgameCharacterPage_Relation" />
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                                           Text="{x:Bind ViewModel.Character.Relation, Mode=OneWay, FallbackValue={}}"
                                           Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <TextBox Text="{x:Bind ViewModel.Character.Relation, Mode=TwoWay, FallbackValue={}}"
                                         Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </StackPanel>
                            <!-- 性别 -->
                            <StackPanel Margin="{StaticResource SmallTopMargin}">
                                <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           x:Uid="GalgameCharacterPage_Gender" />
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                                           Text="{x:Bind ViewModel.Character.Gender, Mode=OneWay, FallbackValue={}, Converter={StaticResource EnumToStringConverter}}"
                                           Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <ComboBox ItemsSource="{x:Bind ViewModel.Genders}"
                                          SelectedItem="{x:Bind ViewModel.Character.Gender, Mode=TwoWay}"
                                          Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="models:Gender">
                                            <TextBlock Text="{Binding Converter={StaticResource EnumToStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel x:Name="CharacterInfoBlockRight" RelativePanel.Below="CharacterInfoBlockLeft">
                            <!-- 身高 -->
                            <StackPanel Margin="{StaticResource SmallTopMargin}">
                                <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           x:Uid="GalgameCharacterPage_Height" />
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                                           Text="{x:Bind ViewModel.Character.Height, Mode=OneWay, FallbackValue={}, TargetNullValue='-'}"
                                           Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <TextBox Text="{x:Bind ViewModel.Character.Height, Mode=TwoWay, FallbackValue={}}"
                                         Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </StackPanel>

                            <!-- 体重 -->
                            <StackPanel Margin="{StaticResource SmallTopMargin}">
                                <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           x:Uid="GalgameCharacterPage_Weight" />
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                                           Text="{x:Bind ViewModel.Character.Weight, Mode=OneWay, FallbackValue={}, TargetNullValue='-'}"
                                           Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <TextBox Text="{x:Bind ViewModel.Character.Weight, Mode=TwoWay, FallbackValue={}}"
                                         Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </StackPanel>

                            <!-- BWH -->
                            <StackPanel Margin="{StaticResource SmallTopMargin}">
                                <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           x:Uid="GalgameCharacterPage_BWH" />
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                                           Text="{x:Bind ViewModel.Character.BWH, Mode=OneWay, FallbackValue={}, TargetNullValue='-'}"
                                           Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <TextBox Text="{x:Bind ViewModel.Character.BWH, Mode=TwoWay, FallbackValue={}}"
                                         Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </StackPanel>

                            <!-- 血型 -->
                            <StackPanel Margin="{StaticResource SmallTopMargin}">
                                <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           x:Uid="GalgameCharacterPage_BloodType" />
                                <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                                           Text="{x:Bind ViewModel.Character.BloodType, Mode=OneWay, FallbackValue={}, TargetNullValue='-'}"
                                           Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                                <TextBox Text="{x:Bind ViewModel.Character.BloodType, Mode=TwoWay, FallbackValue={}}"
                                         Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </StackPanel>
                        </StackPanel>

                    </RelativePanel>

                    <!-- 简介 -->
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromVerticalOffset="200"/>
                            </TransitionCollection>
                        </StackPanel.ChildrenTransitions>
                        <TextBlock
                            Margin="{StaticResource SmallTopBottomMargin}"
                            Style="{ThemeResource SubtitleTextBlockStyle}"
                            x:Uid="GalgamePage_Description"
                            Visibility="{x:Bind ViewModel.IsSummaryVisible, Mode=OneWay}" />
                        <TextBlock
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind ViewModel.Character.Summary, Mode=OneWay, FallbackValue={}}"
                            IsTextSelectionEnabled="True"
                            Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}" />
                        <TextBox
                            Text="{x:Bind ViewModel.Character.Summary, Mode=TwoWay, FallbackValue={}}"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MinHeight="100"
                            Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>